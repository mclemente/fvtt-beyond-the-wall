<header class="sheet-header flexrow">
	<div class="portrait">
		<img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
	</div>
	<div class="header-fields">
		<input name="name" type="text" value="{{actor.name}}" placeholder="Name"/>
		<div class="class flexrow">
			<div class="form-group class">
				{{> detailItem item=class type="class"}}
			</div>
			<div class="form-group level">
				<input name="system.level" type="number" value="{{system.level}}" />
			</div>
		</div>
		<div class="form-group">
			<label>Alignment</label>
			<div class="form-fields">
				<select name="system.alignment">
					{{selectOptions config.alignments selected=system.alignment }}
				</select>
			</div>
		</div>
		<div class="form-group experience">
			<label>Experience</label>
			<div class="form-fields">
				<input name="system.xp.value" type="number" value="{{system.xp.value}}" />
				{{#if (eq actor.type "character")}}
				<input name="system.xp.max" type="number" value="{{system.xp.max}}" />
				{{/if}}
			</div>
		</div>
		<div class="form-group">
			<label>Base Attack Bonus</label>
			<input name="system.bab" type="number" value="{{system.bab}}" />
		</div>
		<div class="form-group">
			<label>Initiative</label>
			<input name="system.initiative" type="number" value="{{system.initiative}}" />
		</div>
	</div>
</header>

{{#*inline "detailItem"}}
    <span class="details-label">{{localize (concat "TYPES.Item." type)}}</span>
    <h3>
        <span class="value">{{item.name}}</span>
        {{#if @root.editable}}
            {{#if item}}
                <span class="detail-item-control" data-item-id="{{item.id}}"><i class="fa-solid fa-fw fa-ellipsis-v"></i></span>
            {{else}}
                <a data-action="open-compendium" data-compendium={{compendium}}><i class="fa-solid fa-fw fa-search"></i></a>
            {{/if}}
        {{/if}}
    </h3>
{{/inline}}