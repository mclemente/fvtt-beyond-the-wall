<form class="{{cssClass}} flexcol" autocomplete="off">
	{{> "btw.item-header" }}

	<section class="sheet-body flexrow">
		<div class="details">
			<div class="form-group">
				<label>Ability Score</label>
				<div class="form-fields">
					<select name="system.ability">
						{{selectOptions config.abilities selected=system.ability blank="" }}
					</select>
				</div>
			</div>
			<div class="form-group">
				<label>Bonus</label>
				<div class="form-fields">
					<input type="number" name="system.bonus" value="{{system.bonus}}" min="0" placeholder="2" data-dtype="Number">
				</div>
			</div>
		</div>
		<div>
			{{editor descriptionHTML target="system.notes" button=true editable=editable engine="prosemirror" collaborate=false}}
		</div>
	</section>
</form>