<form class="{{cssClass}} flexcol" autocomplete="off">
	{{> "btw.item-header" }}

	<section class="sheet-body flexrow">
		<div class="details-sidebar">
			<div class="form-group">
				<label>Bonus to Hit</label>
				<div class="form-fields">
					<input type="number" name="system.bonus" value="{{system.bonus}}" min="0" data-dtype="Number" />
				</div>
			</div>
			<div class="form-group">
				<label>Damage</label>
				<div class="form-fields">
					<input type="text" name="system.damage" value="{{system.damage}}" />
				</div>
			</div>
			<div class="form-group">
				<label>Type</label>
				<select name="system.type">
					{{selectOptions config.armorTypes selected=system.type }}
				</select>
			</div>
		</div>
		<div>
			{{editor descriptionHTML target="system.notes" button=true editable=editable engine="prosemirror" collaborate=false}}
		</div>
	</section>
</form>